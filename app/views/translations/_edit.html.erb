<div class="modal-header">
   <h3 id="myModalLabel"><%= @title %></h3>
</div>
<div class="modal-body">

  <%= form_for(@translation, remote: true, data: { type: 'script' }) do |f| %>
    <div class="hidden_fields">
      <%= f.hidden_field :resource_code, name: 'translation[key]', value: @translation.key %>
      <%= f.hidden_field :resource_code, name: 'translation[locale]', value: @translation.locale %>
    </div>
    <!--feilds for editing the Outcome and Indicator text-->
  	<fieldset>
      <% if @disable_ckeditor %>
        <%= f.text_area :resource_text, name: 'translation[value]', id: 'resource_text', value: @translation.value %>
      <% else %>
    	  <%= f.cktext_area :resource_text, name: 'translation[value]', id: 'resource_text', style: {className: "pull-left"}, value: @translation.value, ckeditor: {toolbar: 'mini', language: @locale_code, uiColor: '#b0e0e6'}  %>
      <% end %>
    </fieldset>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary">Save changes</button>
    </div>
  <% end %>

</div>